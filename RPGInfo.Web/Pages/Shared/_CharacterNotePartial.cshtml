@using RPGInfo.Web.Models
@model RPGInfo.Web.Pages.CharacterDetailModel

<h4>Character Notes</h4>
@*TODO: Style content inside list group, hook up remove button, remove horizontal scroll for longer comments*@

<div class="row scroll">
    <ul class="list-group col-12">
        @foreach (var note in @Model.Character.CharacterNotes)
        {
            <li class="list-group-item">
                <div class="row">
                    <div class="col-10 note-style">
                        @note.NoteTitle | @note.NoteDate.ToShortDateString() | @note.NoteContent
                    </div>
                    <div class="col-2">
                        <button type="button" class="btn btn-danger btn-sm">Remove</button>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>

<form asp-page-handler="AddNote" class="mt-4 mb-4">
    <div class="row">
        <div class="form-group col-6">
            <label for="NoteTitle">Title</label>
            <input type="text" name="NoteTitle" class="form-control">
        </div>

        <div class="form-group  col-6">
            <label for="NoteDate">Date</label>
            <input type="datetime" name="NoteDate" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="NoteContent">Content</label>
        <input type="text" name="NoteContent" class="form-control">
    </div>

    <button type="button" id="add-note-form" class="btn btn-primary">Note Add</button>

    <button type="submit" class="btn btn-primary">Note Submit</button>
</form>

<button id="searchButton" type="button" class="btn btn-primary" data-toggle="modal" data-target="#addBookModal">Add Book</button>

